import React, { useState } from 'react'
import { create } from 'json-server'


const Login = ({ login, register }) => {

  const [username, setUsername] = useState('')
  const [password, setPassword] = useState('')
  const [createUsername, setCreateUsername] = useState('')
  const [createPassword, setCreatePassword] = useState('')
  const [checkPassword, setCheckPassword] = useState('')

  const handleChange = (e, setFunc) => {
    e.preventDefault()
    setFunc(e.target.value)
  }
  const handleLogin = (e) => {
    e.preventDefault()
  }



  return (
    <div>
      <form onSubmit={handleLogin}>
        <input value={username} onChange={(e) => handleChange(e, setUsername)} type="text" />
        <input value={password} onChange={(e) => handleChange(e, setPassword)} type="password" />

        <button className='btn' type='submit'>login</button>
      </form>
      <form onSubmit={() => console.log('moi')}>
        <input value={createUsername} onChange={e => handleChange(e, setCreateUsername)} type="text" />
        <input value={createPassword} onChange={e => handleChange(e, setCreatePassword)} type="password" />
        <input value={checkPassword} onChange={e => handleChange(e, setCheckPassword)} type="password" />
      </form>
    </div>
  )
}

export { Login }